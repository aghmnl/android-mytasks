<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyTasks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="materialButtonOutlinedStyle">@style/outlinedButton</item>

        <!--        <item name="colorError">@color/colorError</item>-->
        <!--        <item name="colorOnError">@color/colorOnError</item>-->
        <item name="android:fontFamily">@font/red_hat_display</item>
    </style>

    <style name="outlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/color_900</item>
        <item name="android:textColor">@color/color_900</item>
    </style>

    <style name="errorButton" parent="Widget.Material3.Button">
        <item name="android:color">@color/colorError</item>
        <item name="android:textColor">@color/text_button</item>
    </style>

    <style name="MainMargin">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="Icon">
        <item name="android:iconTint">@color/icon</item>
    </style>

    <style name="AppTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
    </style>

    <style name="AppTitle">
        <item name="titleTextAppearance">@style/AppTitleTextAppearance</item>
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/checkbox</item>
        <!--        <item name="android:buttonTintMode">src_in</item>-->
        <item name="android:textColor">@color/checkbox</item>
    </style>


</resources>